<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId,lightning:actionOverride" access="global" >
    
    <aura:attribute name="record" type="object"/>
    <aura:attribute name="simpleRecord" type="object"/>
    <aura:attribute name="errorRecord" type="String"/>
    <aura:attribute name="recordId" type="String"/>   
    <!-- To check whether data already exist or new -->
    <aura:attribute name="isEditData" type="Boolean"/>
    
    <force:recordData aura:id="forceRecord"
                      recordId="{!v.recordId}"
                      targetRecord="{!v.record}"
                      targetFields="{!v.simpleRecord}"
                      targetError="{!v.errorRecord}"
                      layoutType="FULL"
                      mode="EDIT"
                      fields="FirstName, LastName, Phone, Email" 
                      recordUpdated="{!c.recordUpdated}"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <div role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open slds-modal_medium">
        <div class="slds-modal__container">
            <header class="slds-modal__header">
                <h1 class="slds-text-heading_large">New Contact</h1>
            </header>
            <div class="slds-modal__content slds-p-around_small" id="modal-content-id-1">
                <div calss="slds-grid slds-wrap">
                    <h1 class="slds-size_2-of-2 slds-float_left slds-text-heading_medium">Basic Information</h1>
                    <lightning:input class="slds-size_1-of-1 slds-float_left slds-p-around_x-small slds-small-size--1-of-1 slds-large-size--1-of-2" 
                                     aura:id="field" 
                                     type="text" 
                                     label="First Name" 
                                     value="{!v.simpleRecord.FirstName}" 
                                     placeholder="First Name"/>    
                    
                    <lightning:input class="slds-size_1-of-1 slds-float_left slds-p-around_x-small slds-small-size--1-of-1 slds-large-size--1-of-2" 
                                     aura:id="field" 
                                     type="text" 
                                     label="Last Name" 
                                     value="{!v.simpleRecord.LastName}" 
                                     placeholder="Last Name" 
                                     required="true"/>
                    
                    <lightning:input class="slds-size_1-of-1 slds-float_left slds-p-around_x-small slds-small-size--1-of-1 slds-large-size--1-of-2" 
                                     aura:id="field" 
                                     type="tel" 
                                     label="Phone" 
                                     value="{!v.simpleRecord.Phone}" 
                                     placeholder="Phone"
                                     pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
                                     messageWhenPatternMismatch="Please enter valid phone number"/>
                    
                    <lightning:input class="slds-size_1-of- slds-float_left slds-p-around_x-small slds-small-size--1-of-1 slds-large-size--1-of-2" 
                                     aura:id="field" 
                                     type="email" 
                                     label="Email" 
                                     value="{!v.simpleRecord.Email}" 
                                     placeholder="Email"/>
                </div>
            </div>
            <footer class="slds-modal__footer">
                <lightning:button label="Cancel" onclick="{!c.cancel}"  />
                <lightning:button label="Save" onclick="{!c.saveContact}" variant="brand"/>
            </footer>
        </div>
        
    </div>
    <div class="slds-backdrop slds-backdrop_open"></div>
</aura:component>